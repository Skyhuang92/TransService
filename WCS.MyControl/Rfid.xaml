<UserControl x:Class="WCS.MyControl.Rfid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WCS.MyControl"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Viewbox Stretch="Fill">
        <Canvas Width="100" Height="50">
            <TextBlock Text="BCR" Foreground="DarkGray" FontSize="14" Width="Auto" Height="Auto"  HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="33" Canvas.Top="32"/>
            <ed:BlockArrow Name="baSouth" Width="31" Stroke="DarkGray" Fill="OrangeRed" RenderTransformOrigin="0.5,0.5" Canvas.Left="33" Canvas.Top="-29" Height="91">
                <ed:BlockArrow.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="90"/>
                    </TransformGroup>
                </ed:BlockArrow.RenderTransform>
            </ed:BlockArrow>
        </Canvas>
    </Viewbox>
</UserControl>
